extends layout

block content
  h1 To Do List

  form.newTodo(action='/createTask', method='post')
    input(name='task', type='text' placeholder='Enter Task Here')
    button(type="submit") add

  ul
    each task in tasks
      form(action='/updateTask/' + task.task_id, method='post')
        li
          input(name='task', value= task.note)

      form(action='/deleteTask/' + task.task_id, method='post')
        li
          button(type='submit') X
